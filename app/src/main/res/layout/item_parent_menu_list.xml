<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/card_parent_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimValue_5"
                android:elevation="@dimen/dimValue_10"
                app:cardCornerRadius="@dimen/dimValue_5">



                <RelativeLayout
                    android:id="@+id/relative_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img_parent_manu"
                        android:layout_width="@dimen/size_170px"
                        android:layout_height="@dimen/size_170px"
                        android:scaleType="centerCrop"
                        android:src="@drawable/sweet" />
                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.3"
                        android:background="#000" />

                    <LinearLayout
                        android:layout_width="@dimen/size_120px"
                        android:layout_height="@dimen/size_120px"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/menu_circle"
                        android:gravity="center"
                        android:orientation="vertical">

                        <View
                            android:layout_width="@dimen/size_100px"
                            android:layout_height="1dp"
                            android:background="@color/white"></View>

                        <TextView
                            android:id="@+id/tv_parent_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimValue_5"
                            android:layout_marginTop="@dimen/dimValue_5"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="dcscscscsc"
                            android:textColor="#fff"
                            android:textSize="@dimen/dimTextSize_16" />

                        <View
                            android:layout_width="@dimen/size_100px"
                            android:layout_height="1dp"
                            android:background="@color/white"></View>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
