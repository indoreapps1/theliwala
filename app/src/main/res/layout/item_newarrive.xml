<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="@dimen/size_150px"
    android:layout_height="wrap_content"
    android:background="@drawable/border_layout">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimValue_5"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/dimValue_80"
                android:layout_height="@dimen/size_80px"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/productTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimValue_2"
                android:singleLine="true"
                android:text="produt name"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/dimTextSize_16" />

            <TextView
                android:id="@+id/productprice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:singleLine="true"
                android:textColor="@color/red"
                android:textSize="@dimen/dimTextSize_14" />

            <TextView
                android:id="@+id/discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimValue_1"
                android:textColor="@color/green"
                android:textSize="@dimen/dimTextSize_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|end"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dimValue_10"
                android:gravity="left|center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rupees_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/dimTextSize_14" />

                <TextView
                    android:id="@+id/productPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimValue_1"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/dimTextSize_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimValue_5"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linearLayout_addSub"
                    android:layout_width="@dimen/size_90px"
                    android:layout_height="@dimen/size_24px"
                    android:layout_marginRight="@dimen/dimValue_10"
                    android:background="@drawable/done_corner_round_border"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/decrement_Product"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.32"
                        android:gravity="center"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/dimTextSize_16" />

                    <TextView
                        android:id="@+id/textView_nos"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimValue_5"
                        android:layout_marginRight="@dimen/dimValue_5"
                        android:layout_weight="0.36"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/primary_text"
                        android:textColorHint="@color/primary_text"
                        android:textSize="@dimen/dimTextSize_14" />

                    <TextView
                        android:id="@+id/increase_Product"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.32"
                        android:gravity="center"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/dimTextSize_20" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/addLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView_addToCart"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center|end"
                        android:background="@color/background_grey"
                        android:gravity="center"
                        android:padding="@dimen/dimValue_5"
                        android:text="Add"
                        android:textColor="@color/white"
                        android:textSize="@dimen/dimTextSize_14" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>

