<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimValue_5">

    <LinearLayout
        android:id="@+id/liner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimValue_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_order_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center|left"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/dimTextSize_16" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".5"
                android:gravity="center|end">

                <TextView
                    android:id="@+id/rupee_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/dimTextSize_16" />

                <TextView
                    android:id="@+id/tv_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimValue_2"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/dimTextSize_16" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimValue_5"
                android:layout_weight=".65"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dimValue_5"
                    android:gravity="center|left"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/dimTextSize_14" />

                <View
                    android:layout_width="@dimen/size_1px"
                    android:layout_height="@dimen/size_10px"
                    android:layout_marginLeft="@dimen/dimValue_5"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dimValue_5"
                    android:background="@color/secondary_text"></View>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimValue_5"
                    android:gravity="center|left"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/dimTextSize_14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".35"
                android:layout_marginTop="@dimen/dimValue_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_track_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|right"
                    android:text="Track"
                    android:singleLine="true"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/dimTextSize_14" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1px"
            android:layout_marginTop="@dimen/dimValue_10"
            android:background="@color/secondary_text"></View>
    </LinearLayout>

</LinearLayout>