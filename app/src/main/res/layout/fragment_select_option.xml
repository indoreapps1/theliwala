<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Body_bg"
    android:orientation="vertical"
>
    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimValue_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/store_image"
                android:layout_width="@dimen/size_200px"
                android:layout_height="@dimen/size_50px"
                android:layout_gravity="center|top"
                android:layout_margin="@dimen/dimValue_10"
                android:scaleType="centerCrop"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Store Name"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/dimTextSize_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/purchech_order"
                android:layout_width="@dimen/size_200px"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimValue_10"
                android:background="@drawable/capsuleshape_fill_button"
                android:gravity="center"
                android:padding="@dimen/dimValue_7"
                android:text="Purchased Order"
                android:textColor="@color/white"
                android:textSize="@dimen/dimTextSize_18" />

            <TextView
                android:id="@+id/loyalies"
                android:layout_width="@dimen/size_200px"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimValue_10"
                android:background="@drawable/capsuleshape_fill_button"
                android:gravity="center"
                android:padding="@dimen/dimValue_7"
                android:text="Loyalties Points"
                android:textColor="@color/white"
                android:textSize="@dimen/dimTextSize_18" />

            <TextView
                android:id="@+id/offers"
                android:layout_width="@dimen/size_200px"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimValue_10"
                android:background="@drawable/capsuleshape_fill_button"
                android:gravity="center"
                android:padding="@dimen/dimValue_7"
                android:text="Offer"
                android:textColor="@color/white"
                android:textSize="@dimen/dimTextSize_18" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
