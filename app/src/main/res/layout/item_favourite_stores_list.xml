<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimValue_5"
        app:cardCornerRadius="@dimen/dimValue_5"
        app:cardElevation="@dimen/dimValue_5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3">

                <ImageView
                    android:id="@+id/store_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_100px"
                    android:layout_margin="@dimen/dimValue_5"
                    android:scaleType="centerCrop" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dimValue_5"
                android:layout_weight="0.7"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimValue_5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/store_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.85"
                        android:gravity="left|bottom"
                        android:paddingBottom="@dimen/dimValue_5"
                        android:singleLine="true"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/dimTextSize_16" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dimValue_10"
                        android:layout_weight="0.15"
                        android:gravity="center">


                        <microsysindia.sirjohn.heartanimation.ShineButton
                            android:id="@+id/heart_icon"
                            android:layout_width="@dimen/size_24px"
                            android:layout_height="@dimen/size_24px"
                            android:layout_gravity="end"
                            android:src="@android:color/darker_gray"
                            app:allow_random_color="true"
                            app:btn_color="@color/red"
                            app:siShape="@drawable/heart" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/store_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textSize="@dimen/dimTextSize_12" />

                <LinearLayout
                    android:id="@+id/email_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimValue_5"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/email_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/store_email_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimValue_5"
                        android:singleLine="true"
                        android:textSize="@dimen/dimTextSize_14" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/phone_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimValue_5"
                    android:gravity="center|left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/contact_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/store_contact_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dimValue_5"
                        android:singleLine="true"
                        android:textSize="@dimen/dimTextSize_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimValue_5"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/timing_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:gravity="center|left"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/timing_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|left" />

                        <TextView
                            android:id="@+id/store_timing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimValue_7"
                            android:singleLine="true"
                            android:textSize="@dimen/dimTextSize_14" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/store_status"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/dimValue_5"
                        android:layout_weight="0.2"
                        android:gravity="center|end"
                        android:singleLine="true"
                        android:textSize="@dimen/dimTextSize_14" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.design.widget.CoordinatorLayout>
