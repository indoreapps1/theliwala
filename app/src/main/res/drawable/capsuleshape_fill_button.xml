<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <gradient
        android:startColor="@color/background_grey"
        android:centerColor="@color/background_grey_dark"
        android:endColor="@color/background_grey_dark"
        android:angle="-135"/>
    <!-- view background color -->
    <!--<solid-->
        <!--android:color="@color/background_grey" >-->
    <!--</solid>-->

    <!--&lt;!&ndash; view border color and width &ndash;&gt;-->
