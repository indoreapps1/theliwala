<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/menuItemLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimValue_10"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimValue_10"
            android:layout_weight="1"
            android:background="@drawable/nav_menu_circle"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nav_menuicon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dimValue_4"
                android:textColor="@color/background_grey"
                android:textSize="@dimen/dimTextSize_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/nav_menutitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimValue_5"
            android:layout_weight="9"
            android:text="laslsdalksdkldfskljdsf"
            android:textColor="@color/background_grey"
            android:textSize="@dimen/dimTextSize_16" />
    </LinearLayout>
</LinearLayout>
